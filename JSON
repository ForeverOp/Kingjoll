function updateLoadstring(scriptNum = "notfound"){
    const box = document.getElementById("loadstringBox")
    const url = scriptURLs[scriptNum] || scriptURLs["notfound"]
    box.value = `loadstring(game:HttpGet("${url}"))()`
}
function loadScript(num){
    currentScript = predefinedScripts[num] || "-- Script vazio";
    document.getElementById("scriptEditor").value = currentScript;
    show("loadstring");
    updateLoadstring(num);  // agora pega o script correto
}
function useEditorScript(){
    const text = document.getElementById("scriptEditor").value.trim()
    if(!text){ alert("Editor vazio"); return }
    currentScript = text
    show("loadstring")
    updateLoadstring("init") // se quiser gerar sempre init.lua do editor
}
